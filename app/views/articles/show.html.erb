<h1><%= @article.title %></h1>
<h2><%= @article.text %></h2>
<%= link_to 'Show all articles', articles_path %>

<% @article.comments.each do |comment| %>
	<h3><%= comment.author  %> said:</h3>
	<p>
		<%= comment.body %>		
	</p>
	------------------------------------
<% end %>
<hr />

<%= form_for([@article, @article.comments.build]) do |f| %>

	<p> 
	<%= f.label :author %><br/>
	<%= f.text_field :author %>
	</p>

	<p> 
	<%= f.label :body %><br/>
	<%= f.text_area :body %>
	</p>

	<p>
	<%= f.submit 'Add Comment' %>
	</p>
<% end %>